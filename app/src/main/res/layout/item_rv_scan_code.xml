<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:background="@color/background_dark"
        android:layout_width="match_parent" android:layout_height="60dp">

    <TextView
            android:id="@+id/item_index"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="21sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageView
            android:id="@+id/item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_index"
            android:layout_marginStart="10dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


    <TextView
            android:id="@+id/item_code"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_name"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/item_image"
            android:textColor="@color/white"
            tools:text="646465465465"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_code"
            app:layout_constraintBottom_toTopOf="@id/item_time"
            app:layout_constraintLeft_toLeftOf="@id/item_code"
            android:textColor="@color/white"
            tools:text="脉动维生素饮料（水蜜桃口味）600ml"
            android:layout_height="wrap_content"/>




    <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/item_code"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="¥ 3.8"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/item_price"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            app:layout_goneMarginLeft="0dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="2018-01-28 23:30:00"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>