<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="80dp">

    <TextView
            android:id="@+id/item_index"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textSize="21sp"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ImageView
            android:id="@+id/item_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/item_index"
            android:layout_marginStart="10dp"
            app:layout_constraintDimensionRatio="w,1:1"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"/>


    <TextView
            android:id="@+id/item_code"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_name"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/item_image"
            tools:text="646465465465"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_code"
            app:layout_constraintBottom_toTopOf="@id/item_price"
            app:layout_constraintLeft_toLeftOf="@id/item_code"
            tools:text="脉动维生素饮料（水蜜桃口味）600ml"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_price"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="@id/item_code"
            app:layout_constraintTop_toBottomOf="@id/item_name"
            app:layout_constraintBottom_toTopOf="@id/item_count"
            app:layout_constraintRight_toLeftOf="@id/item_selling"
            app:layout_constraintVertical_chainStyle="spread"
            android:textSize="12sp"
            tools:text="进价：¥ 3.8"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_selling"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/item_price"
            app:layout_constraintTop_toTopOf="@id/item_price"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12sp"
            tools:text="售价：20"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_count"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="@id/item_price"
            app:layout_constraintRight_toLeftOf="@id/item_add"
            app:layout_constraintTop_toBottomOf="@id/item_price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            tools:text="数量：20"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/item_add"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/item_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_count"
            android:textSize="12sp"
            tools:text="成本总计：20"
            android:layout_height="wrap_content"/>


    <LinearLayout
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent" android:layout_height="0.4dp"/>

</android.support.constraint.ConstraintLayout>