<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">


    <com.contrarywind.view.WheelView
            android:id="@+id/number_pick_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/number_pick_2"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="10dp" android:layout_height="wrap_content"/>


    <com.contrarywind.view.WheelView
            android:id="@+id/number_pick_2"
            app:layout_constraintLeft_toRightOf="@id/number_pick_1"
            app:layout_constraintRight_toLeftOf="@id/number_pick_3"
            app:layout_constraintTop_toTopOf="@id/number_pick_1"
            app:layout_constraintBottom_toBottomOf="@id/number_pick_1"
            android:layout_width="10dp" android:layout_height="wrap_content"/>


    <com.contrarywind.view.WheelView
            android:id="@+id/number_pick_3"
            app:layout_constraintLeft_toRightOf="@id/number_pick_2"
            app:layout_constraintRight_toLeftOf="@id/number_pick_4"
            app:layout_constraintTop_toTopOf="@id/number_pick_1"
            app:layout_constraintBottom_toBottomOf="@id/number_pick_1"
            android:layout_width="10dp" android:layout_height="wrap_content"/>


    <com.contrarywind.view.WheelView
            android:id="@+id/number_pick_4"
            app:layout_constraintLeft_toRightOf="@id/number_pick_3"
            app:layout_constraintRight_toLeftOf="@id/number_pick_dot"
            app:layout_constraintTop_toTopOf="@id/number_pick_1"
            app:layout_constraintBottom_toBottomOf="@id/number_pick_1"
            android:layout_width="10dp" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/number_pick_dot"
            app:layout_constraintLeft_toRightOf="@id/number_pick_4"
            app:layout_constraintRight_toLeftOf="@id/number_pick_5"
            app:layout_constraintTop_toTopOf="@id/number_pick_1"
            app:layout_constraintBottom_toBottomOf="@id/number_pick_1"
            app:layout_constraintDimensionRatio="h,1:1"
            android:layout_width="10dp" android:layout_height="10dp"/>

    <com.contrarywind.view.WheelView
            android:id="@+id/number_pick_5"
            app:layout_constraintLeft_toRightOf="@id/number_pick_dot"
            app:layout_constraintRight_toLeftOf="@id/number_pick_6"
            app:layout_constraintTop_toTopOf="@id/number_pick_1"
            app:layout_constraintBottom_toBottomOf="@id/number_pick_1"
            android:layout_width="10dp" android:layout_height="wrap_content"/>


    <com.contrarywind.view.WheelView
            android:id="@+id/number_pick_6"
            app:layout_constraintLeft_toRightOf="@id/number_pick_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/number_pick_1"
            app:layout_constraintBottom_toBottomOf="@id/number_pick_1"
            android:layout_width="10dp" android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>